@page "/mensagens"
@inject NavigationManager NavigationManager

<PageTitle>Central de Mensagens - Hotelaria</PageTitle>

<div class="mensagens-page">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-icon">üí¨</div>
            <div class="header-text">
                <h1>Central de Mensagens</h1>
                <p>Todas as suas conversas em um s√≥ lugar</p>
            </div>
        </div>
        <div class="header-stats">
            <div class="stat-badge">
                <span class="badge-number">@mensagensNaoLidas</span>
                <span class="badge-label">N√£o lidas</span>
            </div>
            <div class="stat-badge">
                <span class="badge-number">@conversasAtivas</span>
                <span class="badge-label">Ativas</span>
            </div>
        </div>
    </div>

    <div class="mensagens-container">
        <!-- Sidebar -->
        <div class="conversas-sidebar">
            <!-- Filtros -->
            <div class="filters-bar">
                <button class="filter-btn @(filtroAtual == "todas" ? "active" : "")" @onclick='() => AplicarFiltro("todas")'>
                    Todas (@totalMensagens)
                </button>
                <button class="filter-btn @(filtroAtual == "nao-lidas" ? "active" : "")" @onclick='() => AplicarFiltro("nao-lidas")'>
                    N√£o Lidas (@mensagensNaoLidas)
                </button>
            </div>

            <!-- Filtro por Plataforma -->
            <div class="platform-filters">
                <button class="platform-btn @(plataformaFiltro == "todas" ? "active" : "")" @onclick='() => FiltrarPlataforma("todas")'>
                    <span class="platform-icon">üåê</span>
                    Todas
                </button>
                <button class="platform-btn airbnb @(plataformaFiltro == "airbnb" ? "active" : "")" @onclick='() => FiltrarPlataforma("airbnb")'>
                    <img src="https://a0.muscache.com/airbnb/static/icons/android-icon-192x192.png" alt="Airbnb" class="platform-logo" />
                    Airbnb
                </button>
                <button class="platform-btn booking @(plataformaFiltro == "booking" ? "active" : "")" @onclick='() => FiltrarPlataforma("booking")'>
                    <img src="https://cf.bstatic.com/static/img/booking_logo_knowledge_graph/247454a990efac1952e44dddbf30c58677aa0fd8.png" alt="Booking" class="platform-logo" />
                    Booking
                </button>
                <button class="platform-btn hostelworld @(plataformaFiltro == "hostelworld" ? "active" : "")" @onclick='() => FiltrarPlataforma("hostelworld")'>
                    <img src="https://www.hostelworld.com/pwa/assets/img/brand/logo.png" alt="Hostelworld" class="platform-logo" />
                    Hostelworld
                </button>
            </div>

            <!-- Busca -->
            <div class="search-box">
                <input type="text" placeholder="Buscar conversas..." @bind="buscaTexto" @bind:event="oninput" @onkeyup="BuscarConversas" />
                <span class="search-icon">üîç</span>
            </div>

            <!-- Lista de Conversas -->
            <div class="conversas-lista">
                @foreach (var conversa in conversasFiltradas)
                {
                    <div class="conversa-item @(conversaSelecionada?.Id == conversa.Id ? "active" : "") @(conversa.NaoLida ? "unread" : "")"
                         @onclick="() => SelecionarConversa(conversa)">
                        
                        <div class="conversa-avatar">
                            <img src="@GetAvatarUrl(conversa.NomeHospede)" alt="@conversa.NomeHospede" />
                            @if (conversa.NaoLida)
                            {
                                <span class="unread-indicator"></span>
                            }
                        </div>

                        <div class="conversa-info">
                            <div class="conversa-header">
                                <span class="conversa-nome">@conversa.NomeHospede</span>
                                <span class="conversa-tempo">@FormatarTempo(conversa.UltimaMensagem)</span>
                            </div>
                            <div class="conversa-preview">
                                <span class="conversa-texto">@conversa.PreviewMensagem</span>
                            </div>
                            <div class="conversa-meta">
                                <img src="@GetPlatformLogo(conversa.Plataforma)" alt="@conversa.Plataforma" class="platform-badge" />
                                <span class="reserva-numero">#@conversa.NumeroReserva</span>
                            </div>
                        </div>
                    </div>
                }

                @if (!conversasFiltradas.Any())
                {
                    <div class="empty-state">
                        <div class="empty-icon">üì≠</div>
                        <p>Nenhuma conversa encontrada</p>
                    </div>
                }
            </div>
        </div>

        <!-- Chat Area -->
        <div class="chat-area">
            @if (conversaSelecionada != null)
            {
                <!-- Chat Header -->
                <div class="chat-header">
                    <div class="chat-header-info">
                        <img src="@GetAvatarUrl(conversaSelecionada.NomeHospede)" alt="@conversaSelecionada.NomeHospede" class="chat-avatar" />
                        <div class="chat-header-text">
                            <h3>@conversaSelecionada.NomeHospede</h3>
                            <div class="chat-header-meta">
                                <img src="@GetPlatformLogo(conversaSelecionada.Plataforma)" alt="@conversaSelecionada.Plataforma" class="platform-logo-small" />
                                <span>Reserva #@conversaSelecionada.NumeroReserva</span>
                                <span class="separator">‚Ä¢</span>
                                <span>Check-in: @conversaSelecionada.CheckIn.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                    <div class="chat-header-actions">
                        <button class="btn-icon" title="Informa√ß√µes da reserva">‚ÑπÔ∏è</button>
                        <button class="btn-icon" title="Mais op√ß√µes">‚ãÆ</button>
                    </div>
                </div>

                <!-- Messages -->
                <div class="chat-messages" @ref="messagesContainer">
                    @foreach (var mensagem in conversaSelecionada.Mensagens)
                    {
                        <div class="message @(mensagem.Enviada ? "sent" : "received")">
                            @if (!mensagem.Enviada)
                            {
                                <img src="@GetAvatarUrl(conversaSelecionada.NomeHospede)" alt="Avatar" class="message-avatar" />
                            }
                            <div class="message-content">
                                <div class="message-bubble">
                                    <p>@mensagem.Texto</p>
                                </div>
                                <span class="message-time">@mensagem.DataHora.ToString("HH:mm")</span>
                            </div>
                        </div>
                    }
                </div>

                <!-- Input -->
                <div class="chat-input-area">
                    <button class="btn-attachment">üìé</button>
                    <textarea 
                        class="chat-input" 
                        placeholder="Digite sua mensagem..."
                        @bind="novaMensagem"
                        @onkeydown="HandleKeyPress"
                        rows="1"></textarea>
                    <button class="btn-send" @onclick="EnviarMensagem" disabled="@string.IsNullOrWhiteSpace(novaMensagem)">
                        <span>üì§</span>
                    </button>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="chat-empty">
                    <div class="empty-illustration">üí¨</div>
                    <h3>Selecione uma conversa</h3>
                    <p>Escolha uma conversa da lista para come√ßar a responder</p>
                </div>
            }
        </div>
    </div>
</div>

