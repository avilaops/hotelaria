    private async Task EnviarMensagem()
    {
        if (conversaSelecionada == null || string.IsNullOrWhiteSpace(novaMensagem)) return;

        conversaSelecionada.Mensagens.Add(new Mensagem
        {
            Texto = novaMensagem,
            DataHora = DateTime.Now,
            Enviada = true
        });

        novaMensagem = "";
        StateHasChanged();

        // Scroll to bottom
        await Task.Delay(100);
        // await JS.InvokeVoidAsync("scrollToBottom", messagesContainer);
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await EnviarMensagem();
        }
    }

