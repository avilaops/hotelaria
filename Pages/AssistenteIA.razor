@page "/assistente-ia"
@inject OllamaService OllamaService
@inject ReservaService ReservaService
@inject QuartoService QuartoService

<PageTitle>Assistente IA - Hotelaria</PageTitle>

<div class="assistente-ia-page">
    <div class="page-header">
        <div class="header-icon">ü§ñ</div>
        <h1>Assistente IA</h1>
        <p class="subtitle">Powered by Ollama</p>
    </div>

    <!-- Status de Conex√£o -->
    <div class="connection-status @(conexaoOk ? "connected" : "disconnected")">
        <span class="status-icon">@(conexaoOk ? "‚úÖ" : "‚ùå")</span>
        <span>@(conexaoOk ? "Ollama Conectado" : "Ollama Desconectado")</span>
        @if (!string.IsNullOrEmpty(modeloAtual))
        {
            <span class="model-badge">@modeloAtual</span>
        }
        <button class="btn-refresh" @onclick="VerificarConexao">üîÑ Verificar</button>
    </div>

    <!-- A√ß√µes R√°pidas -->
    <div class="quick-actions">
        <h2>‚ö° A√ß√µes R√°pidas</h2>
        <div class="actions-grid">
            <button class="action-card" @onclick="AnalisarOcupacaoAtual" disabled="@processando">
                <div class="card-icon">üìä</div>
                <h3>Analisar Ocupa√ß√£o</h3>
                <p>An√°lise inteligente do per√≠odo atual</p>
            </button>

            <button class="action-card" @onclick="SugerirPrecosQuartos" disabled="@processando">
                <div class="card-icon">üí∞</div>
                <h3>Sugerir Pre√ßos</h3>
                <p>Otimiza√ß√£o de pre√ßos dos quartos</p>
            </button>

            <button class="action-card" @onclick="GerarRelatorio" disabled="@processando">
                <div class="card-icon">üìà</div>
                <h3>Relat√≥rio Financeiro</h3>
                <p>An√°lise financeira com IA</p>
            </button>

            <button class="action-card" @onclick="OtimizarDescricoes" disabled="@processando">
                <div class="card-icon">‚úçÔ∏è</div>
                <h3>Otimizar Descri√ß√µes</h3>
                <p>Melhorar descri√ß√µes dos quartos</p>
            </button>
        </div>
    </div>

    <!-- Chat -->
    <div class="chat-section">
        <h2>üí¨ Chat com Assistente</h2>
        
        <div class="chat-container">
            <div class="messages-area" @ref="messagesArea">
                @foreach (var msg in mensagens)
                {
                    <div class="message @msg.Role">
                        <div class="message-avatar">
                            @(msg.Role == "user" ? "üë§" : "ü§ñ")
                        </div>
                        <div class="message-content">
                            <div class="message-text">@msg.Content</div>
                            <div class="message-time">@msg.Timestamp.ToString("HH:mm")</div>
                        </div>
                    </div>
                }
                
                @if (processando)
                {
                    <div class="message assistant">
                        <div class="message-avatar">ü§ñ</div>
                        <div class="message-content">
                            <div class="typing-indicator">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="chat-input-area">
                <textarea 
                    class="chat-input" 
                    @bind="mensagemUsuario"
                    @onkeydown="HandleKeyDown"
                    placeholder="Digite sua pergunta... (Shift+Enter para nova linha, Enter para enviar)"
                    rows="2"
                    disabled="@processando">
                </textarea>
                <button class="btn-send" @onclick="EnviarMensagem" disabled="@(processando || string.IsNullOrWhiteSpace(mensagemUsuario))">
                    <span>@(processando ? "‚è≥" : "üì§")</span>
                    Enviar
                </button>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    @if (!string.IsNullOrEmpty(ultimoResultado))
    {
        <div class="result-panel">
            <div class="result-header">
                <h3>üìã √öltimo Resultado</h3>
                <button class="btn-close" @onclick="() => ultimoResultado = string.Empty">‚úï</button>
            </div>
            <div class="result-content">
                @((MarkupString)ultimoResultado.Replace("\n", "<br>"))
            </div>
        </div>
    }
</div>

