@code {
    private ElementReference messagesArea;
    private bool conexaoOk = false;
    private string? modeloAtual;
    private bool processando = false;
    private string mensagemUsuario = "";
    private string ultimoResultado = "";
    private List<ChatMessage> mensagens = new();

    protected override async Task OnInitializedAsync()
    {
        await VerificarConexao();
        AdicionarMensagemSistema("üëã Ol√°! Sou o assistente IA do sistema de hotelaria. Como posso ajud√°-lo hoje?");
    }

    private async Task VerificarConexao()
    {
        conexaoOk = await OllamaService.VerificarConexao();
        
        if (conexaoOk)
        {
            var modelos = await OllamaService.ListarModelosDisponiveis();
            modeloAtual = modelos.FirstOrDefault() ?? "Modelo n√£o detectado";
        }
    }

    private async Task EnviarMensagem()
    {
        if (string.IsNullOrWhiteSpace(mensagemUsuario) || processando) return;

        var pergunta = mensagemUsuario;
        mensagens.Add(new ChatMessage
        {
            Role = "user",
            Content = pergunta,
            Timestamp = DateTime.Now
        });

        mensagemUsuario = "";
        processando = true;

        try
        {
            var resposta = await OllamaService.GerarResposta(pergunta);
            mensagens.Add(new ChatMessage
            {
                Role = "assistant",
                Content = resposta,
                Timestamp = DateTime.Now
            });
        }
        catch (Exception ex)
        {
            mensagens.Add(new ChatMessage
            {
                Role = "assistant",
                Content = $"Erro: {ex.Message}",
                Timestamp = DateTime.Now
            });
        }
        finally
        {
            processando = false;
            StateHasChanged();
        }
    }

    private async Task AnalisarOcupacaoAtual()
    {
        processando = true;
        ultimoResultado = "";

        try
        {
            var hoje = DateTime.Today;
            var inicioMes = new DateTime(hoje.Year, hoje.Month, 1);
            var fimMes = inicioMes.AddMonths(1).AddDays(-1);

            var reservas = ReservaService.FiltrarPorPeriodo(inicioMes, fimMes);
            
            ultimoResultado = await OllamaService.AnalisarOcupacao(inicioMes, fimMes, reservas);
            AdicionarMensagemSistema($"üìä An√°lise de ocupa√ß√£o conclu√≠da para {inicioMes:MMMM/yyyy}");
        }
        catch (Exception ex)
        {
            ultimoResultado = $"Erro ao analisar ocupa√ß√£o: {ex.Message}";
        }
        finally
        {
            processando = false;
        }
    }

    private async Task SugerirPrecosQuartos()
    {
        processando = true;
        ultimoResultado = "";

        try
        {
            var quartos = QuartoService.ObterTodos();
            var sugestoes = new List<string>();

            foreach (var quarto in quartos.Take(3)) // Limitar a 3 para n√£o demorar muito
            {
                var sugestao = await OllamaService.SugerirPreco(
                    quarto.Tipo.ToString(),
                    quarto.Capacidade,
                    DateTime.Today.AddDays(7),
                    quarto.PrecoPorNoite
                );
                sugestoes.Add($"**{quarto.Numero}**: {sugestao}");
            }

            ultimoResultado = string.Join("\n\n", sugestoes);
            AdicionarMensagemSistema("üí∞ Sugest√µes de pre√ßos geradas com sucesso");
        }
        catch (Exception ex)
        {
            ultimoResultado = $"Erro ao sugerir pre√ßos: {ex.Message}";
        }
        finally
        {
            processando = false;
        }
    }

    private async Task GerarRelatorio()
    {
        processando = true;
        ultimoResultado = "";

        try
        {
            var hoje = DateTime.Today;
            var inicioMes = new DateTime(hoje.Year, hoje.Month, 1);

            var reservas = ReservaService.FiltrarPorPeriodo(inicioMes, hoje);
            var receita = reservas.Sum(r => r.ValorTotal);
            var despesas = receita * 0.35m; // Estimativa de 35% de despesas

            ultimoResultado = await OllamaService.GerarRelatorioFinanceiro(receita, despesas, reservas.Count);
            AdicionarMensagemSistema("üìà Relat√≥rio financeiro gerado");
        }
        catch (Exception ex)
        {
            ultimoResultado = $"Erro ao gerar relat√≥rio: {ex.Message}";
        }
        finally
        {
            processando = false;
        }
    }

    private async Task OtimizarDescricoes()
    {
        processando = true;
        ultimoResultado = "";

        try
        {
            var quartos = QuartoService.ObterTodos();
            var descricoes = new List<string>();

            foreach (var quarto in quartos.Take(2))
            {
                var comodidades = new List<string> { "WiFi", "TV", "Ar Condicionado", "Banheiro Privativo" };
                var descricao = await OllamaService.OtimizarDescricaoQuarto(
                    quarto.Tipo.ToString(),
                    quarto.Capacidade,
                    comodidades
                );
                descricoes.Add($"**{quarto.Numero} ({quarto.Tipo})**:\n{descricao}");
            }

            ultimoResultado = string.Join("\n\n---\n\n", descricoes);
            AdicionarMensagemSistema("‚úçÔ∏è Descri√ß√µes otimizadas geradas");
        }
        catch (Exception ex)
        {
            ultimoResultado = $"Erro ao otimizar descri√ß√µes: {ex.Message}";
        }
        finally
        {
            processando = false;
        }
    }

    private void AdicionarMensagemSistema(string texto)
    {
        mensagens.Add(new ChatMessage
        {
            Role = "assistant",
            Content = texto,
            Timestamp = DateTime.Now
        });
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await EnviarMensagem();
        }
    }

    private class ChatMessage
    {
        public string Role { get; set; } = "";
        public string Content { get; set; } = "";
        public DateTime Timestamp { get; set; }
    }
}
